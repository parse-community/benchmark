{
  "root": true,
  "extends": "eslint:recommended",
  "env": {
      "node": true,
      "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "globals": { 
    "beforeEach": true,
    "describe": true,
    "expect": true,
    "it": true,
    "jest": true
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "no-trailing-spaces": 2,
    "eol-last": 2,
    "space-in-parens": ["error", "never"],
    "no-multiple-empty-lines": 1,
    "prefer-const": "error",
    "space-infix-ops": "error",
    "no-useless-escape": "off",
    "no-var": "error",
    "no-console": 0,
    "semi": [ "error", "always"]
  }
}
